package entity;

import adt.ArrayList;
import adt.ListInterface;

public class TutorialGroup {

    private String groupId;
    private String groupName;
    private Programme programme;
    private ListInterface<Student> studentList;
    private ListInterface<Team> teamList;
    private ListInterface<Course> courseList;

    public TutorialGroup(String groupId, String groupName) {
        this.groupId = groupId;
        this.groupName = groupName;
        this.studentList = new ArrayList<>();
        this.teamList = new ArrayList<>();

    }

    public void addStudent(Student student) {
        studentList.add(student);
    }

    public void removeStudent(int position) {
        studentList.remove(position - 1);
    }

    public ListInterface<Student> getStudentLists() {
        return studentList;
    }

    public ListInterface<Team> getTeamLists() {
        return teamList;
    }

    public ListInterface<Course> getCourseLists() {
        return courseList;
    }

    public String getGroupId() {
        return groupId;
    }

    public String getGroupName() {
        return groupName;
    }

    public Programme getProgramme() {
        return programme;
    }

    public void setProgramme(Programme programme) {
        this.programme = programme;
    }

}
